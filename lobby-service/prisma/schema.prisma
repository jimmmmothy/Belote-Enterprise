generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("LOBBY_DATABASE_URL")
}

model Lobby {
  id          String    @id @default(uuid())
  name        String
  maxPlayers  Int       @default(4)
  createdAt   DateTime  @default(now())
  status      String    @default("open") // open, full, started, closed
  players     LobbyPlayer[]
}

model LobbyPlayer {
  id        String   @id @default(uuid())
  lobby     Lobby    @relation(fields: [lobbyId], references: [id])
  lobbyId   String
  playerId  String
  socketId  String?
  name      String?
  joinedAt  DateTime @default(now())

  @@index([lobbyId])
}

